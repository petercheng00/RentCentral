#header-container-inner
  #phone-number
  #pagetitle-wrapper
    %h1 All Listings
    #breadcumb Search all current listings
  #slideshow-shadow
#content
  .maincontent-inner
    .col-2-2
      .table-gray
        
        %table.table
          %thead
            %tr
              %th
                = link_to 'Rent', listings_path(:sort => 'rent', :filter => params[:filter])
              %th Title
              %th Address
              %th
                = link_to 'Rooms', listings_path(:sort => 'rooms', :filter => params[:filter])
              %th Details
          %tbody
          -odd = 'odd'
          - @listings.each do |listing|
            - if odd == 'odd'
              -odd = ''
            - else
              -odd = 'odd'
            %tr{:class => odd}
              %td= "$" + String(listing.rent)
              %td= listing.title
              %td= listing.address
              %td= listing.number_of_rooms
              %td= link_to "See more", listing_path(listing)
    .col-3
      %h2 Search Options
      = form_tag listings_path, :method => :get, :id => 'filter_form' do
        Minimum Rent<br>
        = number_field_tag :minRent, params[:minRent]
        <br>Maximum Rent<br>
        = number_field_tag :maxRent, params[:maxRent]
        <br>Minimum Rooms<br>
        = number_field_tag :minRooms, params[:minRooms]
        <br>Maximum Rooms<br>
        = number_field_tag :maxRooms, params[:maxRooms]
        <br>
        = submit_tag 'Refresh'
